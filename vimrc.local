colorscheme molokai

set nospell
set relativenumber

let g:indent_guides_enable_on_vim_startup = 0 " disable tab highlight
let DisableAutoPHPFolding = 1

" Disable arrow keys "
noremap <Up> <NOP>
noremap <Down> <NOP>
noremap <Left> <NOP>
noremap <Right> <NOP>

nmap <F8> :TagbarToggle<CR>

function! NumberToggle()
    if(&relativenumber == 1)
        set number
    else
        set relativenumber
    endif
endfunc
